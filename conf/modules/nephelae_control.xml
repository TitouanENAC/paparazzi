<!DOCTYPE module SYSTEM "module.dtd">

<module name="nephelae_control" dir="nephelae">
  <doc>
    <description>Control based on the nephelae_observer and so the airplane caracteristics</description>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings name="nephelae_control">
        <dl_setting min="-10" max="10" step="0.1" module="nephelae/nephelae_control" var="trim_elevator" shortname="t_ele" type="float"/>
        <dl_setting min="-10" max="10" step="0.1" module="nephelae/nephelae_control" var="trim_aileron" shortname="t_ail" type="float"/>
        <dl_setting min="0" max="5" step="0.1" module="nephelae/nephelae_control" var="trim_thrust" shortname="t_thr" type="float"/>
        <dl_setting min="0" max="100" step="1" module="nephelae/nephelae_control" var="speed_rate" shortname="spd_rt" type="float"/>
      </dl_settings>
    </dl_settings>
  </settings>
  <header>
    <file name="nephelae_control.h"/>
  </header>
  <init fun="nephelae_control_init()"/>
  <makefile>
    <file name="nephelae_control.c"/>
  </makefile>
</module>

